<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KinoMaxi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/primaryColor</item>
        <item name="toolbarStyle">@style/Widget.KinoMaxi.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.KinoMaxi.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.KinoMaxi.ActionBar</item>
    </style>

    <style name="Widget.KinoMaxi.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.KinoMaxi.ActionBar" parent="Widget.MaterialComponents.ActionBar.PrimarySurface">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="icon">@drawable/ic_twotone_local_movies_24</item>
    </style>

    <style name="ThemeOverlay.KinoMaxi.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="textAllCaps">true</item>
    </style>
</resources>